extend ../layout


append content
	.container
		if flows.length
			.content
				a.btn.btn-success.pull-right(href='/flow/new') Create
				table.table.table-striped
					thead
						tr
							th Title
							th Description
							th Created
					tbody
						each flow in flows
							tr
								td 
									a(href='/flow/#{flow.flowid}') #{flow.title}
								td #{flow.description}
								td #{flow.updated_at}
